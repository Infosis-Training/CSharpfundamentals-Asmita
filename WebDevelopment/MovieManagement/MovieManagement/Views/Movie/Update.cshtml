
@using MovieManagement.ViewModel
@model MovieViewModel
@{
	ViewData["Title"] = "Update movies";
}

 <h1>
	Update the required fields
 </h1>


 <form class="row g-3" asp-controller="Movie" asp-action="Update" method="post" enctype="multipart/form-data">
      <div class="col-md-6">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for = "Name">
      </div>
      <div class="col-md-6">
        <label class="form-label" asp-for="Code">Code</label>
        <input class="form-control" asp-for = "Code" readonly>
      </div>
      <div class="col-md-4">
        <label class="form-label" asp-for="LengthInMin">LengthInMin</label>
        <label class="form-label" asp-for="LengthInMin">LengthInMin</label>
        <input class="form-control" asp-for = "LengthInMin">
      </div>
      
      <div class="col-md-4">
        <label class="form-label" asp-for="ReleaseDate">Release Date</label>
        <input class="form-control" asp-for = "ReleaseDate">
       </div>
      <div class="col-md-4">
        <label class="form-label" asp-for="GenreId">Genre</label>
        <select class="form-control" asp-for="GenreId" asp-items="Model.Genres"></select>
      </div>
      <div class="col-md-8">
        <label asp-for="Banner" class="form-label">Select Banner</label>
        <input class="form-control" asp-for="Banner">
        @*<img class="img-thumbnail img-fluid" src="Model.BannerDataUrl" />*@
      </div>
      <div class="col-4">
        <img class="img-thumbnail img-fluid" src="@Model.BannerDataUrl"/>
      </div>

      <div class="col-12">
        <label class="form-label" asp-for="Description">Description</label>
        <textarea class="form-control" asp-for = "Description"></textarea>
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-danger">Confirm Update</button>
      </div>
 </form>

  

